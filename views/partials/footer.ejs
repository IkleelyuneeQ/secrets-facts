    <script>
        var myParagraph = document.getElementById("myParagraph");
        myParagraph.style.maxWidth = "300px";
        myParagraph.style.margin = "0 auto";

        $(document).ready(function () {
    // Select the form and input fields
    const form = $('#registerForm');
    const emailInput = $('.emailInput');
    const passwordInput = $('.passwordInput');
    const registerButton = $('.registerButton');

    // Function to check if both email and password inputs are filled
    function checkInputs() {
      const emailFilled = emailInput.val().trim() !== '';
      const passwordFilled = passwordInput.val().trim() !== '';
      registerButton.prop('disabled', !(emailFilled && passwordFilled));
    }

    // Bind the checkInputs function to input events
    emailInput.on('input', checkInputs);
    passwordInput.on('input', checkInputs);
  });
